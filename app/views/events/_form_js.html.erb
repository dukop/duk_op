<script>
  var locationName = document.getElementById('event_location_name');
  locationName.addEventListener('input', function(e) {
    var selectedOptions = document.querySelectorAll("#locations option[value-uppercase='"+e.target.value.toUpperCase()+"']");
    if (selectedOptions.length > 0) {
      var selectedOption = selectedOptions[0];
      document.getElementById("event_location_street_address").value = selectedOption.dataset.street_address;
      document.getElementById("event_location_street_address").disabled = true;
      document.getElementById("event_location_postcode").value = selectedOption.dataset.postcode;
      document.getElementById("event_location_postcode").disabled = true;
      document.getElementById("event_location_town").value = selectedOption.dataset.town;
      document.getElementById("event_location_town").disabled = true;
    } else {
      document.getElementById("event_location_street_address").value = "";
      document.getElementById("event_location_street_address").disabled = false;
      document.getElementById("event_location_postcode").value = "";
      document.getElementById("event_location_postcode").disabled = false;
      document.getElementById("event_location_town").value = "";
      document.getElementById("event_location_town").disabled = false;
    }
  });


  var priceCheck = document.getElementById('priceCheck')
  priceCheck.addEventListener('change', function(e) {
    if (e.target.checked) {
      document.getElementById('priceInput').style.display = 'block'
      document.getElementById('priceInput').focus()
    } else {
      document.getElementById('priceInput').style.display = 'none'
    }
  });


  var uploadFile = document.getElementById('uploadFile')
  uploadFile.addEventListener('change', function(e) {
    var file = e.target.value;
    var filePath = e.target.value.split("\\");
    var fileName = filePath[filePath.length - 1]
    if (fileName) {
      document.getElementById('uploadFileLabel').innerHTML = fileName;
    } else {
      document.getElementById('uploadFileLabel').innerHTML = 'Upload fil';
    }

  });
</script>
