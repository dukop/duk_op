<div class="col-md-8 hidden-xs">
  <h2 class="section-heading"><%= t '.title' %></h2>

  <% highlights.each do |event| %>
      <div class="upcoming-event row">
        <div class="col-xs-4">
          <% if event.best_picture.present? %>
              <%= link_to event do %>
                  <%= image_tag event.best_picture.url(:large), class: 'img-responsive center-block' %>
              <% end %>
          <% end %>
        </div>
        <div class="col-xs-8">
          <div class="row">
            <div class="event-date col-xs-8">
              <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
              <%= I18n.localize(event.start_time, format: :header) %>
            </div>
            <div class="event-place col-xs-4">
              <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
              <%= link_to(event.location.display_name, event.location) %>
            </div>
          </div>
          <h3 class="upcoming-event-title"><%= link_to(title_display(event), event) %></a></h3>
          <%# Somewhat clumsy, but using the Rails truncate_words method caused errors %>
          <p><%= truncate(event.short_description, length: 450, separator: ' ') %></p>
        </div>
      </div>
  <% end %>
</div>
